@model WorkTrackingSystem.Models.Analysis

@{
    ViewData["Title"] = "Xóa phân tích"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4"><i class="fas fa-chart-bar"></i> Xóa phân tích</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa phân tích này?</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        Tổng số
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Total)
                    </dd>
                    <dt class="col-sm-3">
                        Đúng hạn
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Ontime)
                    </dd>
                    <dt class="col-sm-3">
                        Trễ
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Late)
                    </dd>
                    <dt class="col-sm-3">
                        Quá hạn
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Overdue)
                    </dd>
                    <dt class="col-sm-3">
                        Đang xử lý
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Processing)
                    </dd>
                    <dt class="col-sm-3">
                        Thời gian
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Time)
                    </dd>
                    <dt class="col-sm-3">
                        Nhân viên
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName) @* Display Employee Name *@
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở về danh sách</a>
                </form>
            </div>
        </div>
    </div>
</div>
  
