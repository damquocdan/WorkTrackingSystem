@model WorkTrackingSystem.Models.Baselineassessment

@{
    ViewData["Title"] = "Xóa đánh giá cơ sở"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

@* <h1 class="text-center mb-4"><i class="fas fa-chart-line"></i> Xóa đánh giá cơ sở</h1> *@
<div class="row">
    <div class="col-sm-6"><h3 class="mb-0">@ViewData["Title"]</h3></div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-end">
            <li class="breadcrumb-item"><a asp-action="Index" asp-controller="">Đánh giá</a></li>
            <li class="breadcrumb-item active" aria-current="page">Xóa </li>
        </ol>
    </div>
</div>
<h3 class=" text-center text-danger">Bạn có chắc chắn muốn xóa đánh giá này?</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        Đánh giá khối lượng
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.VolumeAssessment)
                    </dd>
                    <dt class="col-sm-3">
                        Đánh giá tiến độ
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.ProgressAssessment)
                    </dd>
                    <dt class="col-sm-3">
                        Đánh giá chất lượng
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.QualityAssessment)
                    </dd>
                    <dt class="col-sm-3">
                        Tóm tắt đánh giá
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.SummaryOfReviews)
                    </dd>
                    <dt class="col-sm-3">
                        Thời gian
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Time)
                    </dd>
                    <dt class="col-sm-3">
                        Nhân viên
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName) @* Display Employee Name *@
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở về danh sách</a>
                </form>
            </div>
        </div>
    </div>
</div>
  
