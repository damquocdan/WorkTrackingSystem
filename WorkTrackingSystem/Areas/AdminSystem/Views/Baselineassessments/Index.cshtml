@model IEnumerable<WorkTrackingSystem.Models.Baselineassessment>

@{
    ViewData["Title"] = "Đánh giá cơ sở"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4"><i class="fas fa-clipboard-check"></i> Đánh giá cơ sở</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus"></i> Tạo mới</a>
</p>

<table class="table table-bordered table-hover">
    <thead class="thead-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VolumeAssessment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProgressAssessment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QualityAssessment)
            </th>
            <th>
                Tóm tắt đánh giá
            </th>
            <th>
                Thời gian
            </th>
            <th>
                Đánh giá
            </th>
            <th>
                Nhân viên
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.VolumeAssessment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProgressAssessment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QualityAssessment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SummaryOfReviews)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Evaluate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.Id)  @* Or appropriate employee property *@
                </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-info-circle"></i> Chi tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.table').DataTable(); // Initialize DataTables (optional)
        });
    </script>
}