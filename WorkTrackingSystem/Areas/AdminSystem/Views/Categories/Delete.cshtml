@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Xóa hạng mục"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4"><i class="fas fa-folder-minus"></i> Xóa hạng mục</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa hạng mục này?</h3>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        Mã
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Code)
                    </dd>
                    <dt class="col-sm-3">
                        Tên
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Name)
                    </dd>
                    <dt class="col-sm-3">
                        Mô tả
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                </dl>

                <form asp-action="Delete" class="mt-3">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở về danh sách</a>
                </form>
            </div>
        </div>
    </div>
</div>

