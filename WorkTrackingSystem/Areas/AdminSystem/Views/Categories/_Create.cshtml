@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Tạo Mới Hạng Mục";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0 position-relative p-4">
        <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
            ×
        </button>
        <h4 class="text-primary text-center mb-4"><i class="bi bi-plus-circle"></i> Tạo Mới Hạng Mục</h4>
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label"><i class="bi bi-code-slash"></i> Mã Hạng Mục</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"><i class="bi bi-tag"></i> Tên Hạng Mục</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="mt-3">
                <label asp-for="Description" class="form-label"><i class="bi bi-file-text"></i> Mô Tả</label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="mt-3">
                <label asp-for="IdParent" class="form-label"><i class="bi bi-diagram-2"></i> Hạng Mục Cha</label>
                <select asp-for="IdParent" class="form-select" asp-items="ViewBag.ParentCategories">
                    <option value="">-- Chọn Hạng Mục Cha --</option>
                </select>
                <span asp-validation-for="IdParent" class="text-danger"></span>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary w-100 py-2"><i class="bi bi-save"></i> Tạo Mới</button>
                <a asp-action="Index" class="btn btn-secondary mt-2 w-100 py-2"><i class="bi bi-arrow-left"></i> Quay lại</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
