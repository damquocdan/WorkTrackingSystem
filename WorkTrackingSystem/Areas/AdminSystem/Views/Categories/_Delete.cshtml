@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Xóa Hạng Mục";
}

<div class="card p-3 shadow-lg position-relative mt-5">
    <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
        ×
    </button>
    <h4 class="text-danger text-center"><i class="bi bi-trash"></i> Xóa Hạng Mục</h4>
    <p class="text-muted text-center">Bạn có chắc chắn muốn xóa hạng mục này?</p>
    <hr />
    <div class="row mt-3">
        <div class="col-6"><strong><i class="bi bi-code-slash"></i> Mã:</strong> @Model.Code</div>
        <div class="col-6"><strong><i class="bi bi-tag"></i> Tên:</strong> @Model.Name</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-file-text"></i> Mô tả:</strong> @Model.Description</div>
        <div class="col-6"><strong><i class="bi bi-diagram-2"></i> Hạng mục cha:</strong> @Model.IdParent</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-trash"></i> Trạng thái xóa:</strong> @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</div>
        <div class="col-6"><strong><i class="bi bi-check-square"></i> Hoạt động:</strong> @(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-calendar"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</div>
        <div class="col-6"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</div>
        <div class="col-6"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</div>
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
