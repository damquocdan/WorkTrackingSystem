@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Sửa Hạng Mục";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0 position-relative p-3">
        <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
            ×
        </button>
        <h4 class="text-primary text-center"><i class="bi bi-pencil-square"></i> Chỉnh sửa Hạng Mục</h4>
        <hr />
        <form asp-action="Edit" method="post" asp-area="AdminSystem" asp-controller="Categories">
            <input type="hidden" asp-for="Id" />

            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="Code" class="form-label"><i class="bi bi-code-slash"></i> Mã Hạng Mục</label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label"><i class="bi bi-tag"></i> Tên Hạng Mục</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <label asp-for="Description" class="form-label"><i class="bi bi-file-text"></i> Mô Tả</label>
                    <textarea asp-for="Description" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-md-12">
                    <label asp-for="IdParent" class="form-label"><i class="bi bi-diagram-2"></i> Danh Mục Cha</label>
                    <select asp-for="IdParent" class="form-select" asp-items="ViewBag.CategoryList">
                        <option value="">-- Chọn danh mục cha --</option>
                    </select>
                    <span asp-validation-for="IdParent" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save"></i> Lưu</button>
            </div>
        </form>
        <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
