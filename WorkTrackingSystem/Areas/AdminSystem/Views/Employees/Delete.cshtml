@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Xóa nhân viên"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4"><i class="fas fa-user-minus"></i> Xóa nhân viên</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa nhân viên này?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Mã
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Code)
        </dd>
        <dt class="col-sm-3">
            Họ và Tên
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt class="col-sm-3">
            Giới tính
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-3">
            Ngày sinh
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-3">
            Điện thoại
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-3">
            Email
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-3">
            Phòng ban
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Department.Name) @* Display Department Name *@
        </dd>
        <dt class="col-sm-3">
            Chức vụ
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Position.Name) @* Display Position Name *@
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở về danh sách</a>
    </form>
</div>