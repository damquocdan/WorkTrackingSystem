@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Xóa Nhân Viên";
 }

<div class="card p-3 shadow-lg text-center mt-5">
    <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Đóng" onclick="window.location.href='@Url.Action("Index")'"></button>
    <h4 class="text-danger"><i class="bi bi-trash"></i> Xóa Nhân Viên</h4>
    <p class="text-muted">Bạn có chắc chắn muốn xóa nhân viên này?</p>
    <hr />
    <div class="text-center">
        <img src="@Model.Avatar" class="rounded-circle shadow"
             style="width: 100px; height: 100px; object-fit: cover; border: 3px solid #dc3545;" alt="Avatar" />
    </div>
    <div class="row mt-3">
        <div class="col-6"><strong>Mã NV:</strong> @Model.Code</div>
        <div class="col-6"><strong>Họ & Tên:</strong> @Model.FirstName @Model.LastName</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong>Giới tính:</strong> @Model.Gender</div>
        <div class="col-6"><strong>Ngày sinh:</strong> @(Model.Birthday?.ToString("dd/MM/yyyy"))</div>

    </div>
    <div class="row mt-2">
        <div class="col-6"><strong>Điện thoại:</strong> @Model.Phone</div>
        <div class="col-6"><strong>Email:</strong> @Model.Email</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong>Phòng ban:</strong> @Model.Department.Name</div>
        <div class="col-6"><strong>Vị trí:</strong> @Model.Position.Name</div>
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">