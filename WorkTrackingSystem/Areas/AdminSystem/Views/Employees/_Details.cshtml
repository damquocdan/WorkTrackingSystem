@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0 position-relative p-3">
        <h4 class="text-primary text-center"><i class="bi bi-person-lines-fill"></i> Chi tiết nhân viên</h4>
            <button class="close" onclick="closeDetailSection()" style="position: absolute; right: 20px;">
                &times;
            </button>
            <hr />
        <div class="card-body">
            <div class="text-center">
                <img src="@Model.Avatar" class="img-fluid rounded-circle border shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar">
                <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                <p class="text-muted">@Model.Position.Name</p>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label">Phòng ban</label>
                    <p class="form-control bg-light">@Model.Department.Name</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Chức vụ</label>
                    <p class="form-control bg-light">@Model.Position.Name</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Mã nhân viên</label>
                    <p class="form-control bg-light">@Model.Code</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Giới tính</label>
                    <p class="form-control bg-light">
                        @switch (Model.Gender)
                        {
                            case "Male":
                                <text>Nam</text>
                                ; break;
                            case "Female":
                                <text>Nữ</text>
                                ; break;
                            case "Other":
                                <text>Khác</text>
                                ; break;
                            default:
                                <text>Chưa cập nhật</text>
                                ; break;
                        }
                    </p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Ngày sinh</label>
                    <p class="form-control bg-light">@(Model.Birthday.HasValue ? Model.Birthday.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ngày tuyển dụng</label>
                    <p class="form-control bg-light">@(Model.HireDate.HasValue ? Model.HireDate.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")</p>
                </div>
            </div>

            <div class="mt-2">
                <label class="form-label">Điện thoại</label>
                <p class="form-control bg-light">@Model.Phone</p>
            </div>

            <div class="mt-2">
                <label class="form-label">Email</label>
                <p class="form-control bg-light">@Model.Email</p>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
