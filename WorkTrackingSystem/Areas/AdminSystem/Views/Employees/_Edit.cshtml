@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Chỉnh sửa nhân viên";
}

<div class="container mt-4">
    <div class="card p-3 shadow-lg">
               
        <h4 class="text-primary text-center">Chỉnh sửa nhân viên</h4>
        <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
            ×
        </button>
        <div class="text-center">
            <img src="@Model.Avatar" class="rounded-circle shadow"
                 style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #007bff;" alt="Avatar" />
            <input type="file" class="form-control mt-2" asp-for="Avatar" />
            <input type="hidden" value="@Model.Avatar" name="img" />
        </div>

        <div class="row mt-3">
            <div class="col-md-6">
                <label class="form-label">Phòng ban</label>
                <select asp-for="DepartmentId" class="form-select" asp-items="ViewBag.DepartmentId"></select>
            </div>
            <div class="col-md-6">
                <label class="form-label">chức vụ</label>
                <select asp-for="PositionId" class="form-select" asp-items="ViewBag.PositionId"></select>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Mã nhân viên</label>
                <input asp-for="Code" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Giới tính</label>
                <select asp-for="Gender" class="form-select">
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                </select>
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Tên</label>
                <input asp-for="FirstName" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Họ</label>
                <input asp-for="LastName" class="form-control" />
            </div>
        </div>

        <div class="row mt-2">
            <div class="col-md-6">
                <label class="form-label">Ngày sinh</label>
                <input asp-for="Birthday" type="date" class="form-control" />
            </div>
            <div class="col-md-6">
                <label class="form-label">Ngày tuyển dụng</label>
                <input asp-for="HireDate" type="date" class="form-control" />
            </div>
        </div>

        <div class="mt-2">
            <label class="form-label">Điện thoại</label>
            <input asp-for="Phone" class="form-control" />
        </div>

        <div class="mt-2">
            <label class="form-label">Email</label>
            <input asp-for="Email" class="form-control" />
        </div>

        <div class="mt-3 text-center">
            <button type="submit" class="btn btn-primary w-100">Lưu</button>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">