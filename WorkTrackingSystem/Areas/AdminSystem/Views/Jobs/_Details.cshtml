@model WorkTrackingSystem.Models.Score

@{
    ViewData["Title"] = "Chi tiết Công Việc";
}

<div class="container ">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-clipboard-check"></i> Chi tiết Công Việc</h4>
            <button class="close" onclick="closeDetailSection()" style="position: absolute; right: 20px;">&times;</button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <label class="form-label fw-bold">Nhân viên</label>
                    <p class="form-control bg-light">
                        @Model.JobMapEmployee.Employee.Code - @Model.JobMapEmployee.Employee.FirstName @Model.JobMapEmployee.Employee.LastName
                    </p>
                </div>
            </div>
            <div class="row">
                <label class="form-label fw-bold">Công việc</label>
                <textarea readonly class="form-control bg-light ">@Model.JobMapEmployee.Job.Name</textarea>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Trạng thái</label>
                    <p class="form-control bg-light">
                        @switch (Model.Status)
                        {
                            case 1:
                                <text>Hoàn thành (@Model.CompletionDate)</text>
                                ; break;
                            case 2:
                                <text>Chưa hoàn thành</text>
                                ; break;
                            case 3:
                                <text>Hoàn thành muộn (@Model.CompletionDate)</text>
                                ; break;
                            case 4:
                                <text>Đang xử lý</text>
                                ; break;
                            case 0:
                                <text>Chưa bắt đầu</text>
                                ; break;
                            default:
                                <text>Không xác định</text>
                                ; break;
                        }
                    </p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Tiến độ</label>
                    <p class="form-control bg-light">@Model.Progress%</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-4">
                    <label class="form-label fw-bold">Điểm khối lượng</label>
                    <p class="form-control bg-light">@Model.VolumeAssessment</p>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Điểm chất lượng</label>
                    <p class="form-control bg-light">@Model.QualityAssessment</p>
                </div>
                <div class="col-md-4">
                    <label class="form-label fw-bold">Điểm <br />  tiến độ</label>
                    <p class="form-control bg-light">@Model.ProgressAssessment</p>
                </div>

            </div>

            <div class="mt-2">
                <label class="form-label fw-bold">Tổng điểm đánh giá</label>
                <p class="form-control bg-light">@Model.SummaryOfReviews</p>
            </div>
            <div class="">
                <label class="form-label fw-bold">Thời gian</label>
                <p class="form-control bg-light">
                    @Model.Time?.ToString("dd/MM/yyyy")
                </p>
            </div>
            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày tạo</label>
                    <p class="form-control bg-light">@(Model.CreateDate?.ToString("dd/MM/yyyy"))</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-bold">Ngày cập nhật</label>
                    <p class="form-control bg-light">
                        @(Model.UpdateDate?.ToString("dd/MM/yyyy"))
                    </p>
                </div>
            </div>
        </div>
        @* <div class="card-footer d-flex justify-content-end">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Sửa</a>
        </div> *@
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
