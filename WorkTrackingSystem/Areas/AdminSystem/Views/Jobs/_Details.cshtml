@model WorkTrackingSystem.Models.Score

@{
    ViewData["Title"] = "Chi tiết ";
}

<div class="modal-content">
    <div class="modal-header">
        <h2 class="text-center">Chi tiết</h2>
        <button type="button" class="close" onclick="closeDetailSection()">×</button>
    </div>

    <div class="modal-body">
        <dl class="row">
            <dt class="col-sm-4 fw-bold">Nhân viên</dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.JobMapEmployee.Employee.Code)
                @Html.DisplayFor(model => model.JobMapEmployee.Employee.FirstName)
                @Html.DisplayFor(model => model.JobMapEmployee.Employee.LastName)
            </dd>

            <dt class="col-sm-4 fw-bold">Công việc</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.JobMapEmployee.Job.Name)</dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CompletionDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CompletionDate)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Status)
            </dt>
            <dd class="col-sm-8">
                @switch (Model.Status)
                {
                    case 1:
                        <span class="text-bold">Hoàn thành</span> @Html.DisplayFor(model => model.CompletionDate)
                        break;
                    case 2:
                        <span class="text-bold">Chưa hoàn thành</span>
                        break;
                    case 3:
                        <span class="text-bold">Hoàn thành muộn</span> @Html.DisplayFor(model => model.CompletionDate)
                        break;
                    case 4:
                        <span class="text-bold">Đang xử lý</span>
                        break;
                    case 0:
                        <span class="text-bold">Chưa bắt đầu</span>
                        break;
                    default:
                        <span class="text-bold">Không xác định</span>
                        break;
                }
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.VolumeAssessment)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.VolumeAssessment)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.ProgressAssessment)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.ProgressAssessment)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.QualityAssessment)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.QualityAssessment)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SummaryOfReviews)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SummaryOfReviews)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Progress)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Progress)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Time)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Time)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IsDelete)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsDelete)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.IsActive)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.IsActive)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreateDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreateDate)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UpdateDate)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UpdateDate)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.CreateBy)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.CreateBy)
            </dd>

            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.UpdateBy)
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.UpdateBy)
            </dd>
        </dl>
    </div>

    <div class="modal-footer">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary">Sửa</a>
    </div>
</div>