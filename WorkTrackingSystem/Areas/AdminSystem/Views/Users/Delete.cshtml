@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Xóa người dùng"; // Vietnamese title
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4"><i class="fas fa-user-minus"></i> Xóa người dùng</h1>

<h3 class="text-danger">Bạn có chắc chắn muốn xóa người dùng này?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class="col-sm-3">
            Nhân viên
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Employee.FirstName) @Html.DisplayFor(model => model.Employee.LastName) @* Display Employee Name *@
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Xóa</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Trở về danh sách</a>
    </form>
</div>