@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Xóa Người Dùng";
 }

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0 position-relative mt-5">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-2" aria-label="Đóng" onclick="window.location.href='@Url.Action("Index")'"></button>
        <h4 class="text-danger text-center"><i class="bi bi-person-x-fill"></i> Xóa Người Dùng</h4>
        <p class="text-muted text-center">Bạn có chắc chắn muốn xóa người dùng này?</p>
        <hr />
        <div class="row mt-3">
            <div class="col-6"><strong><i class="bi bi-person"></i> Tên đăng nhập:</strong> @Model.UserName</div>
            <div class="col-6"><strong><i class="bi bi-key"></i> Mật khẩu:</strong> @Model.Password</div>
        </div>
        <div class="row mt-2">
            <div class="col-6"><strong><i class="bi bi-trash"></i> Trạng thái xóa:</strong> @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</div>
            <div class="col-6"><strong><i class="bi bi-check-circle"></i> Hoạt động:</strong> @(Model.IsActive ?? false ? "Đã kích hoạt" : "Chưa kích hoạt")</div>
        </div>
        <div class="row mt-2">
            <div class="col-6"><strong><i class="bi bi-calendar-plus"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</div>
            <div class="col-6"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</div>
        </div>
        <div class="row mt-2">
            <div class="col-6"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</div>
            <div class="col-6"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</div>
        </div>
        <div class="row mt-2">
            <div class="col-12"><strong><i class="bi bi-person-badge"></i> Nhân viên:</strong> @Model.Employee.Code - @Model.Employee.FirstName @Model.Employee.LastName, Phòng ban: @Model.Employee.Department.Name</div>
        </div>
        <form asp-action="Delete" class="mt-3">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Xóa</button>
        </form>
        <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>
</div>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
