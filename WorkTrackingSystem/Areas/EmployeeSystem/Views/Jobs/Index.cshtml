@model IEnumerable<WorkTrackingSystem.Models.Job>

@{
    ViewData["Title"] = "Danh sách công việc";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<h2 class="text-primary text-center mb-4">Danh sách Công Việc</h2>

<!-- Bộ lọc trạng thái -->
<div class="mb-3 d-flex justify-content-between">
    <div>
        <select id="filterStatus" class="form-select" style="max-width: 200px;">
            <option value="">Tất cả trạng thái</option>
            <option value="Chưa bắt đầu">Chưa bắt đầu</option>
            <option value="Đang thực hiện">Đang thực hiện</option>
            <option value="Hoàn thành">Hoàn thành</option>
            <option value="Trễ hạn">Trễ hạn</option>
        </select>
    </div>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Tạo công việc mới</a>
</div>

<table class="table table-bordered table-hover shadow">
    <thead class="table-primary text-center">
        <tr>
            <th>Tên công việc</th>
            <th>Hạn chót</th>
            <th>Trạng thái</th>
            <th>Tiến độ</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Where(j => j.EmployeeId == ViewBag.CurrentEmployeeId)) // Chỉ lấy công việc của nhân viên đang đăng nhập
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Deadline1?.ToString("dd/MM/yyyy")</td>
                <td class="text-center">
                    @if (item.Status == 0)
                    {
                        <span class="badge bg-secondary">Chưa bắt đầu</span>
                    }
                    else if (item.Status == 1)
                    {
                        <span class="badge bg-warning text-dark">Đang thực hiện</span>
                    }
                    else if (item.Status == 2)
                    {
                        <span class="badge bg-success">Hoàn thành</span>
                    }
                    else
                    {
                        <span class="badge bg-danger">Trễ hạn</span>
                    }
                </td>
                <td class="text-center">
                    <div class="progress" style="height: 20px;">
                        <div class="progress-bar bg-info" role="progressbar" style="width: @(item.ProgressAssessment ?? 0)%;">
                            @(item.ProgressAssessment ?? 0)%
                        </div>
                    </div>
                </td>
               @*  <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary"><i class="fas fa-edit"></i></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i></a>
                </td> *@
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script>
        document.getElementById('filterStatus').addEventListener('change', function () {
            var selectedStatus = this.value.toLowerCase();
            var rows = document.querySelectorAll("tbody tr");

            rows.forEach(row => {
                var statusText = row.querySelector("td:nth-child(3)").textContent.toLowerCase();
                row.style.display = (selectedStatus === "" || statusText.includes(selectedStatus)) ? "" : "none";
            });
        });
    </script>
}
