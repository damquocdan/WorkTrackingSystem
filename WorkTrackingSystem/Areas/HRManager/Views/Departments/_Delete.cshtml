@model WorkTrackingSystem.Models.Department

@{
    ViewData["Title"] = "Xóa Phòng Ban";
    
}

<div class="card p-3 shadow-lg position-relative mt-5">
    <button class="btn btn-danger" onclick="closeDetailSection()" style="width: 11%; position: absolute; right: 15;">
        <i class="bi bi-x-circle"></i>
    </button>
    <h4 class="text-danger text-center"><i class="bi bi-trash"></i> Xóa Phòng Ban</h4>
    <p class="text-muted text-center">Bạn có chắc chắn muốn xóa phòng ban này?</p>
    <hr />
    <div class="row mt-3">
        <div class="col-6"><strong><i class="bi bi-code-slash"></i> Mã:</strong> @Model.Code</div>
        <div class="col-6"><strong><i class="bi bi-building"></i> Tên:</strong> @Model.Name</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-file-text"></i> Mô tả:</strong> @Model.Description</div>
        <div class="col-6"><strong><i class="bi bi-check-circle"></i> Trạng thái:</strong> @(Model.IsActive ?? false ? "Đã kích hoạt" : "Chưa kích hoạt")</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-calendar-plus"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</div>
        <div class="col-6"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</div>
    </div>
    <div class="row mt-2">
        <div class="col-6"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</div>
        <div class="col-6"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</div>
    </div>
    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">