@model WorkTrackingSystem.Models.Department

@{
    ViewData["Title"] = "Chi Tiết Phòng Ban";
   
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-building"></i> Chi tiết phòng ban</h4>
            <button class="btn btn-danger" onclick="closeDetailSection()">
                <i class="bi bi-x-circle"></i>
            </button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong><i class="bi bi-code-slash"></i> Mã phòng ban:</strong> @Model.Code</li>
                        <li class="list-group-item"><strong><i class="bi bi-building"></i> Tên phòng ban:</strong> @Model.Name</li>
                        <li class="list-group-item"><strong><i class="bi bi-file-text"></i> Mô tả:</strong> @Model.Description</li>
                        <li class="list-group-item"><strong><i class="bi bi-trash"></i> Trạng thái xóa:</strong> @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</li>
                        <li class="list-group-item"><strong><i class="bi bi-check-square"></i> Hoạt động:</strong> @(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar-plus"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</li>
                    </ul>
                </div>
            </div>
        </div>
       
    </div>
</div>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

