@model WorkTrackingSystem.Models.Department

@{
    ViewData["Title"] = "Chi tiết phòng ban";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-building"></i> Chi tiết phòng ban</h4>
            <button class="close" onclick="closeDetailSection()" style="position: absolute; right: 20px;">
                &times;
            </button>
        </div>
        <div class="card-body">
            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label">Mã phòng ban</label>
                    <p class="form-control bg-light">@Model.Code</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Tên phòng ban</label>
                    <p class="form-control bg-light">@Model.Name</p>
                </div>
            </div>

            <div class="mt-2">
                <label class="form-label">Mô tả</label>
                <p class="form-control bg-light">@Model.Description</p>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Trạng thái xóa</label>
                    <p class="form-control bg-light">@(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Hoạt động</label>
                    <p class="form-control bg-light">@(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Ngày tạo</label>
                    <p class="form-control bg-light">@(Model.CreateDate?.ToString("dd/MM/yyyy"))</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ngày cập nhật</label>
                    <p class="form-control bg-light">@(Model.UpdateDate?.ToString("dd/MM/yyyy"))</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Người tạo</label>
                    <p class="form-control bg-light">@Model.CreateBy</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Người cập nhật</label>
                    <p class="form-control bg-light">@Model.UpdateBy</p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
