@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Chi tiết nhân viên</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4 fw-bold">Mã code</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Code)</dd>

                    <dt class="col-sm-4 fw-bold">Họ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.FirstName)</dd>

                    <dt class="col-sm-4 fw-bold">Tên</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.LastName)</dd>

                    <dt class="col-sm-4 fw-bold">Giới tính</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày sinh</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Birthday)</dd> @* Format Birthday *@

                    <dt class="col-sm-4 fw-bold">Điện thoại</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Phone)</dd>

                    <dt class="col-sm-4 fw-bold">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày thuê</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.HireDate)</dd> @* Format HireDate *@

                    <dt class="col-sm-4 fw-bold">Địa chỉ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-4 fw-bold">Đã xóa</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsDelete)</dd>

                    <dt class="col-sm-4 fw-bold">Đang hoạt động</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IsActive)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateDate)</dd>

                    <dt class="col-sm-4 fw-bold">Ngày cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateDate)</dd>

                    <dt class="col-sm-4 fw-bold">Người tạo</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.CreateBy)</dd>

                    <dt class="col-sm-4 fw-bold">Người cập nhật</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.UpdateBy)</dd>

                    <dt class="col-sm-4 fw-bold">Phòng ban</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Department.Name)</dd> @* Display Department Name *@

                    <dt class="col-sm-4 fw-bold">Chức vụ</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Position.Name)</dd> @* Display Position Name *@
                </dl>

                <div class="d-grid gap-2 mt-3">
                    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary"><i class="fas fa-edit me-2"></i>Sửa</a>
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script> @* Replace with your Font Awesome Kit code *@
}