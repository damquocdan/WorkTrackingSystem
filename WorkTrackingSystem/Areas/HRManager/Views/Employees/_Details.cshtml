@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Chi Tiết Người Dùng";
 }

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Chi Tiết Người Dùng</h4>
            <a asp-action="Index" class="btn btn-close btn-light" aria-label="Đóng"></a>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong><i class="bi bi-person"></i> Tên đăng nhập:</strong> @Model.UserName</li>
                        @* <li class="list-group-item"><strong><i class="bi bi-key"></i> Mật khẩu:</strong> @Model.Password</li> *@
                        <li class="list-group-item"><strong><i class="bi bi-trash"></i> Trạng thái xóa:</strong> @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</li>
                        <li class="list-group-item"><strong><i class="bi bi-check-circle"></i> Hoạt động:</strong> @(Model.IsActive ?? false ? "Đã kích hoạt" : "Chưa kích hoạt")</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar-plus"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</li>
                        @* <li class="list-group-item"><strong><i class="bi bi-person-badge"></i> Nhân viên:</strong> @Model.Employee.Code - @Model.Employee.FirstName @Model.Employee.LastName, Phòng ban: @Model.Employee.Department.Name</li> *@
                    </ul>
                </div>
            </div>
        </div>
       @*  <div class="card-footer text-end bg-light rounded-bottom-4">
            <a class="btn btn-warning btn-sm ajax-action" data-url="@Url.Action(\"Edit\", new { id = Model.Id })">
                <i class="bi bi-pencil"></i> Sửa
            </a>
        </div> *@
    </div>
</div>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
