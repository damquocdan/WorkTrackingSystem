@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "chi tiết nhân viên";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-lines-fill"></i> Chi tiết nhân viên</h4>
            <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
                ×
            </button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4 text-center">
                    <img src="@Model.Avatar" class="img-fluid rounded-circle border shadow-sm" style="width: 150px; height: 150px; object-fit: cover;" alt="Avatar">
                    <h5 class="mt-3">@Model.FirstName @Model.LastName</h5>
                    <p class="text-muted">@Model.Position.Name</p>
                </div>
                <div class="col-md-8">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong><i class="bi bi-code-square"></i> Mã nhân viên:</strong> @Model.Code</li>
                        <li class="list-group-item"><strong><i class="bi bi-gender-ambiguous"></i> Giới tính:</strong> @Model.Gender</li>
                        <li class="list-group-item">
                            <strong><i class="bi bi-calendar-date"></i> Ngày sinh:</strong> @(Model.Birthday.HasValue ? Model.Birthday.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </li>
                        <li class="list-group-item"><strong><i class="bi bi-phone"></i> Điện thoại:</strong> @Model.Phone</li>
                        <li class="list-group-item"><strong><i class="bi bi-envelope"></i> Email:</strong> @Model.Email</li>
                        <li class="list-group-item"><strong><i class="bi bi-building"></i> Phòng ban:</strong> @Model.Department.Name</li>
                        <li class="list-group-item"><strong><i class="bi bi-house"></i> Địa chỉ:</strong> @Model.Address</li>
                        <li class="list-group-item">
                            <strong><i class="bi bi-calendar-plus"></i> Ngày vào làm:</strong>@(Model.HireDate.HasValue ? Model.HireDate.Value.ToString("dd/MM/yyyy") : "Chưa cập nhật")
                        </li>
                        <li class="list-group-item"><strong><i class="bi bi-check-square"></i> Trạng thái:</strong> @(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</li>
                    </ul>
                </div>
            </div>
        </div>
       @*  <div class="card-footer text-end bg-light rounded-bottom-4">
            <a class="btn btn-warning btn-sm ajax-action" data-url="@Url.Action("Edit", new { id = Model.Id })">
                <i class="bi bi-pencil"></i> Sửa
            </a>
        </div> *@
    </div>
</div>

<!-- Bootstrap & Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.min.css">
