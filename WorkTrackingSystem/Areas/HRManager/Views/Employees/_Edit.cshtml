@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Sửa Người Dùng";
 }

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0 position-relative p-3">
        <button type="button" class="btn-close position-absolute top-0 end-0 m-2 " aria-label="Đóng" onclick="window.location.href='@Url.Action("Index")'"></button>
        <h4 class="text-primary text-center"><i class="bi bi-pencil-square"></i> Chỉnh sửa Người Dùng</h4>
        <hr />
        <form asp-action="Edit" method="post" asp-area="HRManager" asp-controller="Users">
            <input type="hidden" asp-for="Id" />

            <div class="row mt-3">
                <div class="col-md-6">
                    <label asp-for="UserName" class="form-label"><i class="bi bi-person"></i> Tên Người Dùng</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="EmployeeId" class="form-label"><i class="bi bi-person-badge"></i> Nhân Viên</label>
                    <select asp-for="EmployeeId" class="form-select" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary w-100"><i class="bi bi-save"></i> Lưu</button>
            </div>
        </form>
        <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">