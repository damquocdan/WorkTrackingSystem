@model WorkTrackingSystem.Models.Position

@{
    ViewData["Title"] = "Chi tiết Chức Vụ";
}

<div class="container py-4">
    <div class="card shadow-lg rounded-1 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-1">
            <h4 class="mb-0"><i class="bi bi-diagram-2"></i> Chi tiết Chức Vụ</h4>
            <button class="close" onclick="closeDetailSection()" style="position: absolute; right: 20px;">
                &times;
            </button>
        </div>
        <div class="card-body">
            <div class="text-center">
                <h5 class="mt-3">@Model.Name</h5>
                <p class="text-muted">@Model.Description</p>
            </div>
            <div class="row mt-3">
                <div class="col-md-6">
                    <label class="form-label">Trạng thái quyền</label>
                    <p class="form-control bg-light">@(Model.Status ?? false ? "Có quyền quản lý" : "Không có quyền quản lý")</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Trạng thái xóa</label>
                    <p class="form-control bg-light">@(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Hoạt động</label>
                    <p class="form-control bg-light">@(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Ngày tạo</label>
                    <p class="form-control bg-light">@(Model.CreateDate?.ToString("dd/MM/yyyy"))</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Ngày cập nhật</label>
                    <p class="form-control bg-light">@(Model.UpdateDate?.ToString("dd/MM/yyyy"))</p>
                </div>
                <div class="col-md-6">
                    <label class="form-label">Người tạo</label>
                    <p class="form-control bg-light">@Model.CreateBy</p>
                </div>
            </div>

            <div class="row mt-2">
                <div class="col-md-6">
                    <label class="form-label">Người cập nhật</label>
                    <p class="form-control bg-light">@Model.UpdateBy</p>
                </div>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
