@model WorkTrackingSystem.Models.Position

@{
    ViewData["Title"] = "Chi tiết vị trí";
 
}

<div class="container py-4">
    <div class="card shadow-lg rounded-4 border-0">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-diagram-2"></i> Chi tiết vị trí</h4>
            <button class="close" onclick="closeDetailSection()" style=" position: absolute; right: 20px;">
                ×
            </button>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item"><strong><i class="bi bi-tag"></i> Tên vị trí:</strong> @Model.Name</li>
                        <li class="list-group-item"><strong><i class="bi bi-file-text"></i> Mô tả:</strong> @Model.Description</li>
                        <li class="list-group-item"><strong><i class="bi bi-shield-check"></i> Trạng thái quyền:</strong> @(Model.Status ?? false ? "Có quyền quản lý" : "Không có quyền quản lý")</li>
                        <li class="list-group-item"><strong><i class="bi bi-trash"></i> Trạng thái xóa:</strong> @(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</li>
                        <li class="list-group-item"><strong><i class="bi bi-check-square"></i> Hoạt động:</strong> @(Model.IsActive ?? false ? "Đang hoạt động" : "Không hoạt động")</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar"></i> Ngày tạo:</strong> @(Model.CreateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-calendar-check"></i> Ngày cập nhật:</strong> @(Model.UpdateDate?.ToString("dd/MM/yyyy"))</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-plus"></i> Người tạo:</strong> @Model.CreateBy</li>
                        <li class="list-group-item"><strong><i class="bi bi-person-check"></i> Người cập nhật:</strong> @Model.UpdateBy</li>
                    </ul>
                </div>
            </div>
        </div>
       @*  <div class="card-footer text-end bg-light rounded-bottom-4">
            <a class="btn btn-warning btn-sm ajax-action" data-url="@Url.Action(\"Edit\", new { id = Model.Id })">
                <i class="bi bi-pencil"></i> Sửa
            </a>
        </div> *@
    </div>
</div>

