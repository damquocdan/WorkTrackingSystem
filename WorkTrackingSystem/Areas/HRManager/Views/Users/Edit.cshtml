    @model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Sửa người dùng";
    Layout = "~/Areas/AdminSystem/Views/Shared/_Admin.cshtml";
}

<h1 class="text-center mb-4">Sửa người dùng</h1>

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                <form asp-action="Edit" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label">Tên người dùng</label>
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label">Mật khẩu (để trống nếu không thay đổi)</label>
                        <input asp-for="Password" class="form-control" type="password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                        <small class="text-muted">Nhập mật khẩu mới nếu bạn muốn thay đổi. Nếu không muốn thay đổi mật khẩu, hãy để trống trường này.</small> 
                    </div>

                    <div class="mb-3">
                        <label asp-for="EmployeeId" class="form-label">Nhân viên</label>
                        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                            <option value="">-- Chọn nhân viên --</option>
                        </select>
                        <span asp-validation-for="EmployeeId" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsDelete" class="form-check-input" type="" id="IsDelete" />
                        <label class="form-check-label" for="IsDelete">Đã xóa</label>
                        <span asp-validation-for="IsDelete" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsActive" class="form-check-input" type="" id="IsActive" />
                        <label class="form-check-label" for="IsActive">Đang hoạt động</label>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CreateDate" class="form-label">Ngày tạo</label>
                        <input asp-for="CreateDate" class="form-control" type="date" readonly /> 
                        <span asp-validation-for="CreateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateDate" class="form-label">Ngày cập nhật</label>
                        <input asp-for="UpdateDate" class="form-control" type="date" />
                        <span asp-validation-for="UpdateDate" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CreateBy" class="form-label">Người tạo</label>
                        <input asp-for="CreateBy" class="form-control" readonly /> 
                        <span asp-validation-for="CreateBy" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="UpdateBy" class="form-label">Người cập nhật</label>
                        <input asp-for="UpdateBy" class="form-control" />
                        <span asp-validation-for="UpdateBy" class="text-danger"></span>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-2"></i>Lưu</button>
                        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Quay lại danh sách</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js" crossorigin="anonymous"></script> @* Replace with your Font Awesome Kit code *@
}