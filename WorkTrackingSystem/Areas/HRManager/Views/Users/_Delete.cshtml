@model WorkTrackingSystem.Models.User

@{
    ViewData["Title"] = "Xóa Người Dùng";
}


<div class="card shadow-lg rounded-4 border-0 position-relative mt-5 p-3">
    <button class="close" onclick="closeDetailSection()" style="position: absolute; right: 20px;">
        &times;
    </button>
    <h4 class="text-danger text-center"><i class="bi bi-person-x-fill"></i> Xóa Người Dùng</h4>
    <p class="text-muted text-center">Bạn có chắc chắn muốn xóa người dùng này?</p>
    <hr />
    <div class="row mt-3">
        <div class="col-md-6">
            <label class="form-label">Tên đăng nhập</label>
            <p class="form-control bg-light">@Model.UserName</p>
        </div>
        <div class="col-md-6">
            <label class="form-label">Trạng thái xóa</label>
            <p class="form-control bg-light">@(Model.IsDelete ?? false ? "Đã xóa" : "Chưa xóa")</p>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label class="form-label">Hoạt động</label>
            <p class="form-control bg-light">@(Model.IsActive ?? false ? "Đã kích hoạt" : "Chưa kích hoạt")</p>
        </div>
        <div class="col-md-6">
            <label class="form-label">Ngày tạo</label>
            <p class="form-control bg-light">@(Model.CreateDate?.ToString("dd/MM/yyyy"))</p>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label class="form-label">Ngày cập nhật</label>
            <p class="form-control bg-light">@(Model.UpdateDate?.ToString("dd/MM/yyyy"))</p>
        </div>
        <div class="col-md-6">
            <label class="form-label">Người tạo</label>
            <p class="form-control bg-light">@Model.CreateBy</p>
        </div>
    </div>

    <div class="row mt-2">
        <div class="col-md-6">
            <label class="form-label">Người cập nhật</label>
            <p class="form-control bg-light">@Model.UpdateBy</p>
        </div>
    </div>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger w-100"><i class="bi bi-trash"></i> Xóa</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary mt-2 w-100"><i class="bi bi-arrow-left"></i> Quay lại</a>
</div>


<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
