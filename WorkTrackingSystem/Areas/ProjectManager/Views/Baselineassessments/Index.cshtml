@using X.PagedList.Mvc.Core
@model X.PagedList.IPagedList<WorkTrackingSystem.Models.Baselineassessment>
@{
    ViewData["Title"] = "Danh sách đánh giá cơ bản";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";

    var isDateRange = !string.IsNullOrEmpty(ViewBag.Date1) && !string.IsNullOrEmpty(ViewBag.Date2);
    var totalEvaluations = Model.TotalItemCount;
    var passedEvaluations = Model.Count(x => x.Evaluate.GetValueOrDefault());
    var failedEvaluations = totalEvaluations - passedEvaluations;
    var passRate = totalEvaluations > 0 ? (passedEvaluations * 100.0 / totalEvaluations) : 0;

    var groupedData = !isDateRange ? Model
        .Where(x => x.Time.HasValue)
        .GroupBy(x => x.Time.Value.ToString("MM/yyyy"))
        .Select(g => new
        {
            MonthYear = g.Key,
            SumVolume = g.Sum(x => x.VolumeAssessment ?? 0),
            SumProgress = g.Sum(x => x.ProgressAssessment ?? 0),
            SumQuality = g.Sum(x => x.QualityAssessment ?? 0),
            SumSummary = g.Sum(x => x.SummaryOfReviews ?? 0)
        })
        .OrderBy(g => g.MonthYear)
        .ToList() : new List<object> { }.Select(_ => new
        {
            MonthYear = "",
            SumVolume = 0.0,
            SumProgress = 0.0,
            SumQuality = 0.0,
            SumSummary = 0.0
        }).ToList();

    var labels = groupedData.Select(x => x.MonthYear).ToList();
    var sumVolume = groupedData.Select(x => x.SumVolume).ToList();
    var sumProgress = groupedData.Select(x => x.SumProgress).ToList();
    var sumQuality = groupedData.Select(x => x.SumQuality).ToList();
    var sumSummary = groupedData.Select(x => x.SumSummary).ToList();

    var pieChartData = Model
        .GroupBy(x => $"{x.Employee.Code} - {x.Employee.FirstName} {x.Employee.LastName}")
        .Select(g => new
        {
            EmployeeName = g.Key,
            TotalVolume = g.Sum(x => x.VolumeAssessment ?? 0)
        })
        .ToList();

    var pieLabels = pieChartData.Select(x => x.EmployeeName).ToList();
    var pieValues = pieChartData.Select(x => x.TotalVolume).ToList();
}

<div class="row">
    <div class="col-md-6" style="height: 460px;">
        <div class="chart-container border p-3">
            <h5 class="text-center">Biểu đồ đánh giá</h5>
            <canvas id="evaluationChart" style="@(isDateRange ? "display: none;" : "")"></canvas>
            <div id="noChartMessage" class="text-center" style="@(isDateRange ? "" : "display: none;")">
                Biểu đồ không khả dụng khi lọc theo khoảng thời gian.
            </div>
        </div>
    </div>
    <div class="col-md-6" style="height: 460px;">
        <div class="chart-container border p-3">
            <h5 class="text-center">Tóm tắt công việc</h5>
            <canvas id="summaryChart" style="@(isDateRange ? "display: none;" : "")"></canvas>
            <div id="noSummaryChartMessage" class="text-center" style="@(isDateRange ? "" : "display: none;")">
                Biểu đồ không khả dụng khi lọc theo khoảng thời gian.
            </div>
        </div>
    </div>
</div>

<h1 class="text-center">Danh sách đánh giá @(isDateRange ? "theo khoảng thời gian" : "các tháng")</h1>
<button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
    Tìm kiếm
</button>
<div class="collapse" id="collapseExample">
    <div class="card card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <input type="text" id="employeeName" name="employeeName" class="form-control" value="@ViewBag.EmployeeName" placeholder="Nhập tên nhân viên">
            </div>
            <div class="col-md-3">
                <select id="evaluate" name="evaluate" class="form-select">
                    <option value="">Trạng thái đánh giá</option>
                    <option value="true">Đạt</option>
                    <option value="false">Chưa đạt</option>
                </select>
            </div>
            <div class="col-md-3">
                <input type="month" id="time" name="time" class="form-control" value="@ViewBag.Time" @(isDateRange ? "disabled" : "")>
            </div>
            <div class="col-md-3">
                <input type="date" id="date1" name="date1" class="form-control" value="@ViewBag.Date1" placeholder="Từ ngày">
            </div>
            <div class="col-md-3">
                <input type="date" id="date2" name="date2" class="form-control" value="@ViewBag.Date2" placeholder="Đến ngày">
            </div>
            <div class="col-md-3">
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="bi bi-arrow-repeat"></i></a>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-12" id="list-section">
                <div class="table-responsive">
                    <table class="table table-bordered text-left table-hover" id="assessmentTable">
                        <thead class="text-center">
                            <tr>
                                <th>STT</th>
                                <th>Nhân viên</th>
                                <th>Tổng đánh giá khối lượng</th>
                                <th>Tổng đánh giá tiến độ</th>
                                <th>Tổng đánh giá chất lượng</th>
                                <th>Tổng đánh giá tổng hợp</th>
                                <th>Đánh giá</th>
                                @if (!isDateRange)
                                {
                                    <th>Tháng</th>
                                    <th></th>
                                }
                                <th>
                                    @if (Model.Any())
                                    {
                                        <a id="exportExcel" class="btn btn-success" title="Xuất dữ liệu ra file Excel">
                                            <i class="bi bi-file-earmark-excel"></i> Xuất Excel
                                        </a>
                                    }
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = (Model.PageNumber - 1) * Model.PageSize;
                            }
                            @foreach (var item in Model)
                            {
                                index++;
                                <tr class="@(item.Evaluate.GetValueOrDefault() ? "table-success" : "table-danger")">
                                    <td>@index</td>
                                    <td>@Html.DisplayFor(modelItem => item.Employee.Code) - @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.LastName)</td>
                                    <td>@(item.VolumeAssessment?.ToString("F2") ?? "0.00")</td>
                                    <td>@(item.ProgressAssessment?.ToString("F2") ?? "0.00")</td>
                                    <td>@(item.QualityAssessment?.ToString("F2") ?? "0.00")</td>
                                    <td>@(item.SummaryOfReviews != null ? item.SummaryOfReviews.Value.ToString("F2") : "0.00")</td>
                                    <td>
                                        @if (item.Evaluate.GetValueOrDefault())
                                        {
                                            <p>Đạt</p>
                                        }
                                        else
                                        {
                                            <p>Chưa đạt</p>
                                        }
                                    </td>
                                    @if (!isDateRange)
                                    {
                                        <td>@(item.Time.HasValue ? item.Time.Value.ToString("MM/yyyy") : "")</td>
                                        <td>
                                            <a class="btn-green btn-event ajax-action" data-url="@Url.Action("Details", new { id = item.Id })"><i class="bi bi-info-circle"></i></a>
                                        </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Phân trang -->
                <div class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page, employeeName = ViewBag.EmployeeName, evaluate = ViewBag.Evaluate, time = ViewBag.Time, date1 = ViewBag.Date1, date2 = ViewBag.Date2 }), new PagedListRenderOptions
                    {
                        LiElementClasses = new string[] { "page-item" },
                        PageClasses = new string[] { "page-link" },
                        DisplayLinkToFirstPage = PagedListDisplayMode.Always,
                        DisplayLinkToLastPage = PagedListDisplayMode.Always,
                        DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
                        DisplayLinkToNextPage = PagedListDisplayMode.Always,
                        DisplayEllipsesWhenNotShowingAllPageNumbers = true,
                        MaximumPageNumbersToDisplay = 5
                    })
                </div>
            </div>
            <div class="col-md-4 d-none" id="detail-section">
                <div class="actionCustomers"></div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="chart-container border p-3">
            <h5 class="text-center">Tổng đánh giá khối lượng theo nhân viên</h5>
            <canvas id="volumePieChart"></canvas>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var isDateRange = @(isDateRange ? "true" : "false");
        var labels = @Html.Raw(Json.Serialize(labels));
        var sumVolume = @Html.Raw(Json.Serialize(sumVolume));
        var sumProgress = @Html.Raw(Json.Serialize(sumProgress));
        var sumQuality = @Html.Raw(Json.Serialize(sumQuality));
        var sumSummary = @Html.Raw(Json.Serialize(sumSummary));
        var pieLabels = @Html.Raw(Json.Serialize(pieLabels));
        var pieValues = @Html.Raw(Json.Serialize(pieValues));

        var evaluationChart = null;
        var summaryChart = null;
        var volumePieChart = null;

        function initializeCharts() {
            if (!isDateRange) {
                var ctx1 = document.getElementById('evaluationChart').getContext('2d');
                evaluationChart = new Chart(ctx1, {
                    type: 'line',
                    data: {
                        labels: labels,
                        datasets: [
                            {
                                label: 'Tổng DGKL',
                                data: sumVolume,
                                borderColor: 'blue',
                                fill: false
                            },
                            {
                                label: 'Tổng DGTĐ',
                                data: sumProgress,
                                borderColor: 'green',
                                fill: false
                            },
                            {
                                label: 'Tổng DGCL',
                                data: sumQuality,
                                borderColor: 'red',
                                fill: false
                            }
                        ]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Tổng điểm'
                                }
                            }
                        }
                    }
                });

                var ctx2 = document.getElementById('summaryChart').getContext('2d');
                summaryChart = new Chart(ctx2, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Tổng Đánh giá tổng hợp',
                            data: sumSummary,
                            backgroundColor: 'orange'
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                title: {
                                    display: true,
                                    text: 'Tổng điểm'
                                }
                            }
                        }
                    }
                });
            }

            var ctx3 = document.getElementById('volumePieChart').getContext('2d');
            volumePieChart = new Chart(ctx3, {
                type: 'pie',
                data: {
                    labels: pieLabels.length ? pieLabels : ['Không có dữ liệu'],
                    datasets: [{
                        label: 'Tổng đánh giá khối lượng',
                        data: pieValues.length ? pieValues : [1],
                        backgroundColor: pieValues.length ? [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ] : ['rgba(200, 200, 200, 0.7)'],
                        borderColor: pieValues.length ? [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ] : ['rgba(200, 200, 200, 1)'],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    plugins: {
                        legend: {
                            position: 'top',
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.label || '';
                                    let value = context.raw || 0;
                                    let sum = context.dataset.data.reduce((a, b) => a + b, 0);
                                    let percentage = sum > 0 ? ((value * 100) / sum).toFixed(2) : 0;
                                    return `${label}: ${value} (${percentage}%)`;
                                }
                            }
                        }
                    }
                }
            });
        }

        $(document).ready(function () {
            initializeCharts();

            $(document).on("click", ".ajax-action", function (e) {
                e.preventDefault();
                var url = $(this).data("url");
                if ($("#detail-section").hasClass("d-none")) {
                    $("#list-section").removeClass("col-md-12").addClass("col-md-8");
                    $("#detail-section").removeClass("d-none").addClass("col-md-4");
                }
                $(".actionCustomers").load(url, function (response, status, xhr) {
                    if (status === "error") {
                        alert("Lỗi khi tải dữ liệu: " + xhr.status + " " + xhr.statusText);
                    }
                });
            });

            $("#employeeName, #evaluate, #time, #date1, #date2").on("input change", function () {
                var date1 = $("#date1").val();
                var date2 = $("#date2").val();
                $("#time").prop("disabled", date1 || date2);
                applyFilters();
            });

            $(document).on("click", ".page-link", function (e) {
                e.preventDefault();
                var url = $(this).attr("href");
                loadTable(url);
            });

            $(document).on("click", "#exportExcel", function (e) {
                e.preventDefault();
                var employeeName = $("#employeeName").val();
                var evaluate = $("#evaluate").val();
                var time = $("#time").val();
                var date1 = $("#date1").val();
                var date2 = $("#date2").val();
                var url = "@Url.Action("ExportToExcel")" + "?employeeName=" + encodeURIComponent(employeeName) +
                    "&evaluate=" + encodeURIComponent(evaluate) +
                    "&time=" + encodeURIComponent(time) +
                    "&date1=" + encodeURIComponent(date1) +
                    "&date2=" + encodeURIComponent(date2);
                window.location.href = url;
            });
        });

        function applyFilters() {
            var employeeName = $("#employeeName").val();
            var evaluate = $("#evaluate").val();
            var time = $("#time").val();
            var date1 = $("#date1").val();
            var date2 = $("#date2").val();
            var url = "@Url.Action("Index")" + "?employeeName=" + encodeURIComponent(employeeName) +
                "&evaluate=" + encodeURIComponent(evaluate) +
                "&time=" + encodeURIComponent(time) +
                "&date1=" + encodeURIComponent(date1) +
                "&date2=" + encodeURIComponent(date2);
            loadTable(url);
        }

        function loadTable(url) {
            $.ajax({
                url: url,
                type: "GET",
                beforeSend: function () {
                    $("#assessmentTable").html('<div class="text-center">Đang tải...</div>');
                },
                success: function (data) {
                    var newTable = $(data).find("#assessmentTable").html();
                    $("#assessmentTable").html(newTable);
                    var newPagination = $(data).find(".pagination").html();
                    $(".pagination").html(newPagination);
                    updateCharts(data);
                    updateUI(data);
                },
                error: function (xhr, status, error) {
                    console.error("Lỗi tải dữ liệu:", status, error);
                    $("#assessmentTable").html('<div class="alert alert-danger">Lỗi tải dữ liệu. Vui lòng thử lại.</div>');
                }
            });
        }

        function updateCharts(data) {
            var tableRows = $(data).find("#assessmentTable tbody tr");
            var pieData = {};
            var isDateRange = $("#date1").val() && $("#date2").val();

            tableRows.each(function() {
                var employeeName = $(this).find("td").eq(1).text().trim();
                var volumeAssessment = parseFloat($(this).find("td").eq(2).text().trim()) || 0;

                if (employeeName) {
                    if (!pieData[employeeName]) {
                        pieData[employeeName] = 0;
                    }
                    pieData[employeeName] += volumeAssessment;
                }
            });

            var newPieLabels = Object.keys(pieData);
            var newPieValues = Object.values(pieData);

            volumePieChart.data.labels = newPieLabels.length ? newPieLabels : ['Không có dữ liệu'];
            volumePieChart.data.datasets[0].data = newPieValues.length ? newPieValues : [1];
            volumePieChart.data.datasets[0].backgroundColor = newPieValues.length ? [
                'rgba(255, 99, 132, 0.7)',
                'rgba(54, 162, 235, 0.7)',
                'rgba(255, 206, 86, 0.7)',
                'rgba(75, 192, 192, 0.7)',
                'rgba(153, 102, 255, 0.7)',
                'rgba(255, 159, 64, 0.7)'
            ] : ['rgba(200, 200, 200, 0.7)'];
            volumePieChart.data.datasets[0].borderColor = newPieValues.length ? [
                'rgba(255, 99, 132, 1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ] : ['rgba(200, 200, 200, 1)'];
            volumePieChart.update();

            if (evaluationChart && !isDateRange) {
                var groupedData = [];
                var uniqueMonths = {};

                tableRows.each(function() {
                    var monthYear = $(this).find("td").eq(7).text().trim();
                    if (monthYear && !uniqueMonths[monthYear]) {
                        uniqueMonths[monthYear] = true;
                        groupedData.push({
                            MonthYear: monthYear,
                            SumVolume: 0,
                            SumProgress: 0,
                            SumQuality: 0,
                            SumSummary: 0
                        });
                    }
                });

                tableRows.each(function() {
                    var monthYear = $(this).find("td").eq(7).text().trim();
                    var volume = parseFloat($(this).find("td").eq(2).text().trim()) || 0;
                    var progress = parseFloat($(this).find("td").eq(3).text().trim()) || 0;
                    var quality = parseFloat($(this).find("td").eq(4).text().trim()) || 0;
                    var summary = parseFloat($(this).find("td").eq(5).text().trim()) || 0;

                    var group = groupedData.find(g => g.MonthYear === monthYear);
                    if (group) {
                        group.SumVolume += volume;
                        group.SumProgress += progress;
                        group.SumQuality += quality;
                        group.SumSummary += summary;
                    }
                });

                groupedData.sort((a, b) => a.MonthYear.localeCompare(b.MonthYear));

                evaluationChart.data.labels = groupedData.map(g => g.MonthYear);
                evaluationChart.data.datasets[0].data = groupedData.map(g => g.SumVolume);
                evaluationChart.data.datasets[1].data = groupedData.map(g => g.SumProgress);
                evaluationChart.data.datasets[2].data = groupedData.map(g => g.SumQuality);
                evaluationChart.update();

                summaryChart.data.labels = groupedData.map(g => g.MonthYear);
                summaryChart.data.datasets[0].data = groupedData.map(g => g.SumSummary);
                summaryChart.update();
            }
        }

        function updateUI(data) {
            var isDateRange = $("#date1").val() && $("#date2").val();
            $("#evaluationChart").toggle(!isDateRange);
            $("#noChartMessage").toggle(isDateRange);
            $("#summaryChart").toggle(!isDateRange);
            $("#noSummaryChartMessage").toggle(isDateRange);
            $("#time").prop("disabled", isDateRange);
            $("h1.text-center").text(isDateRange ? "Danh sách đánh giá theo khoảng thời gian" : "Danh sách đánh giá các tháng");

            if (isDateRange && evaluationChart) {
                evaluationChart.destroy();
                evaluationChart = null;
            }
            if (isDateRange && summaryChart) {
                summaryChart.destroy();
                summaryChart = null;
            }
        }

        function closeDetailSection() {
            $("#list-section").removeClass("col-md-8").addClass("col-md-12");
            $("#detail-section").addClass("d-none");
        }
    </script>
}