@model WorkTrackingSystem.Models.Category

@{
    ViewData["Title"] = "Chi tiết danh mục";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="">
    <h1 class="mb-4">Chi tiết danh mục</h1>

    <div>
        <div class="row mb-3">
            <div class="col-md-3">
                <dt><i class="bi bi-code-square"></i> Mã:</dt>
                <dd>@Html.DisplayFor(model => model.Code)</dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-fonts"></i> Tên:</dt>
                <dd>@Html.DisplayFor(model => model.Name)</dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-file-text"></i> Mô tả:</dt>
                <dd>@Html.DisplayFor(model => model.Description)</dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-folder-symlink"></i> Danh mục cha:</dt>
                <dd>@Html.DisplayFor(model => model.IdParent)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <dt><i class="bi bi-trash"></i> Đã xóa:</dt>
                <dd>
                    @if (Model.IsDelete ?? false)
                    {
                        <span>Đã xóa</span>
                    }
                    else
                    {
                        <span>Chưa xóa</span>
                    }
                </dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-check-circle"></i> Hoạt động:</dt>
                <dd>
                    @if (@Model.IsActive ?? false)
                    {
                        <span>Hoạt động</span>
                    }
                    else
                    {
                        <span>Không hoạt động</span>
                    }
                </dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
                <dd>@Html.DisplayFor(model => model.CreateDate)</dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
                <dd>@Html.DisplayFor(model => model.UpdateDate)</dd>
            </div>
        </div>

        <div class="row mb-3">
            <div class="col-md-3">
                <dt><i class="bi bi-person-plus"></i> Người tạo:</dt>
                <dd>@Html.DisplayFor(model => model.CreateBy)</dd>
            </div>
            <div class="col-md-3">
                <dt><i class="bi bi-person-check"></i> Người cập nhật:</dt>
                <dd>@Html.DisplayFor(model => model.UpdateBy)</dd>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Sửa</a>
        <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">