@model EmployeeDetailsViewModel

<h2><i class="fas fa-user"></i> Chi tiết nhân viên: @Model.Employee.Code - @Model.Employee.FirstName @Model.Employee.LastName</h2>

<form asp-action="Details" method="get" class="mb-3">
    <input type="hidden" name="id" value="@Model.Employee.Id" />
    <div class="row">
        <div class="col-md-3">
            <input type="month" name="month" class="form-control" value="@Model.SelectedMonth.ToString("yyyy-MM")" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Xem</button>
        </div>
    </div>
</form>

<h3><i class="fas fa-tasks"></i> Công việc trong tháng @Model.SelectedMonth.ToString("MM/yyyy")</h3>
<table class="table table-bordered">
    <thead>
        <tr>
            <th><i class="fas fa-file-signature"></i> Tên công việc</th>
            <th><i class="fas fa-file-alt"></i> Mô tả</th>
            <th><i class="fas fa-calendar-check"></i> Hạn hoàn thành</th>
            <th><i class="fas fa-calendar-day"></i> Ngày hoàn thành</th>
            <th><i class="fas fa-check-circle"></i> Trạng thái</th>
            <th><i class="fas fa-star"></i> Đánh giá tổng hợp</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var job in Model.Jobs)
        {
            <tr>
                <td>@job.Name</td>
                <td>@job.Description</td>
                <td>@job.Deadline1?.ToString("dd/MM/yyyy")</td>
                <td>@job.CompletionDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    @switch (job.Status)
                    {
                        case 1:
                            <span><i class="fas fa-check-square"></i> Hoàn thành</span>
                            break;
                        case 2:
                            <span><i class="fas fa-times-circle"></i> Chưa hoàn thành</span>
                            break;
                        case 3:
                            <span><i class="fas fa-exclamation-triangle"></i> Hoàn thành muộn</span>
                            break;
                        case 4:
                            <span><i class="fas fa-spinner"></i> Đang xử lý</span>
                            break;
                        default:
                            <span><i class="fas fa-question-circle"></i> Không xác định</span>
                            break;
                    }
                </td>
                <td>@job.SummaryOfReviews?.ToString("F2")</td>
            </tr>
        }
    </tbody>
</table>

<h3><i class="fas fa-chart-line"></i> Đánh giá tháng @Model.SelectedMonth.ToString("MM/yyyy")</h3>
<div class="row">
    <div class="col-md-3"><i class="fas fa-weight"></i> Khối lượng: @Model.BaselineAssessment?.VolumeAssessment?.ToString("F2")</div>
    <div class="col-md-3"><i class="fas fa-tachometer-alt"></i> Tiến độ: @Model.BaselineAssessment?.ProgressAssessment?.ToString("F2")</div>
    <div class="col-md-3"><i class="fas fa-certificate"></i> Chất lượng: @Model.BaselineAssessment?.QualityAssessment?.ToString("F2")</div>
    <div class="col-md-3"><i class="fas fa-calculator"></i> Tổng hợp: @Model.BaselineAssessment?.SummaryOfReviews?.ToString("F2")</div>
</div>

<h3><i class="fas fa-chart-pie"></i> Phân tích tháng @Model.SelectedMonth.ToString("MM/yyyy")</h3>
<div class="row">
    <div class="col-md-2"><i class="fas fa-list-ol"></i> Tổng số: @Model.Analysis?.Total</div>
    <div class="col-md-2"><i class="fas fa-calendar-check"></i> Đúng hạn: @Model.Analysis?.Ontime</div>
    <div class="col-md-2"><i class="fas fa-calendar-times"></i> Trễ hạn: @Model.Analysis?.Late</div>
    <div class="col-md-2"><i class="fas fa-calendar-exclamation"></i> Quá hạn: @Model.Analysis?.Overdue</div>
    <div class="col-md-2"><i class="fas fa-sync-alt"></i> Đang xử lý: @Model.Analysis?.Processing</div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3"><i class="fas fa-arrow-left"></i> Quay lại</a>