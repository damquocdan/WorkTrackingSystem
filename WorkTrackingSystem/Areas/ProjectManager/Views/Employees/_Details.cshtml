@model WorkTrackingSystem.Models.Employee

@{
    ViewData["Title"] = "Chi tiết nhân viên";
}

<h1 class="text-center">Chi tiết nhân viên</h1>

<div class="card shadow-lg p-4">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="card-title">Thông tin nhân viên</h4>
        <button class="btn btn-danger" onclick="closeDetailSection()">Đóng</button>
    </div>
    <hr />
    <div class="text-center mb-3">
        <img src="@Model.Avatar" alt="Avatar" class="rounded-circle" style="width: 120px; height: 120px; object-fit: cover; border: 3px solid #ddd;">
    </div>
    <div class="row">
        <div class="col-md-6">
            <p><strong>Mã nhân viên:</strong> @Model.Code</p>
            <p><strong>Họ:</strong> @Model.LastName</p>
            <p><strong>Tên:</strong> @Model.FirstName</p>
            <p><strong>Giới tính:</strong> @Model.Gender</p>
            <p><strong>Ngày sinh:</strong> @Model.Birthday</p>
        </div>
        <div class="col-md-6">
            <p><strong>Số điện thoại:</strong> @Model.Phone</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Ngày vào làm:</strong> @Model.HireDate</p>
            <p><strong>Địa chỉ:</strong> @Model.Address</p>
            <p><strong>Phòng ban:</strong> @Model.Department?.Name</p>
            <p><strong>Chức vụ:</strong> @Model.Position?.Name</p>
        </div>
    </div>
</div>


<!-- Danh sách công việc -->
<div class="card shadow-lg mt-4 p-4">
    <h4 class="card-title">Công việc được giao</h4>
    <hr />
    @if (ViewBag.JobMaps != null && ((IEnumerable<WorkTrackingSystem.Models.Jobmapemployee>)ViewBag.JobMaps).Any())
    {
        <table class="table table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th class="text-center">Nhân viên</th>
                    <th class="text-center">Danh mục công việc</th>
                    <th class="text-center">Công việc</th>
                    <th class="text-center">Trạng thái</th>
                    <th class="text-center">Bắt đầu</th>
                    <th class="text-center">Hạn chót</th>
                    <th class="text-center">Ngày hoàn thành</th>
                    <th class="text-center">Tổng đánh giá</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var jobMap in (IEnumerable<WorkTrackingSystem.Models.Jobmapemployee>)ViewBag.JobMaps)
                {
                    var latestScore = jobMap.Scores?.OrderByDescending(s => s.CreateDate).FirstOrDefault();
                    <tr class="@(latestScore?.Status == 1 ? "table-success" :
                                latestScore?.Status == 2 ? "table-warning" :
                                latestScore?.Status == 3 ? "table-danger" :
                                latestScore?.Status == 4 ? "table-primary" :
                                latestScore?.Status == 0 ? "table-secondary" : "")">
                        <td>
                            @Model.Code - @Model.FirstName @Model.LastName
                        </td>
                        <td>@(jobMap.Job?.Category?.Name)</td>
                        <td>@(jobMap.Job?.Name)</td>
                        <td>
                            @switch (latestScore?.Status)
                            {
                                case 1:
                                    <span class="text-bold">Hoàn thành</span>
                                    break;
                                case 2:
                                    <span class="text-bold">Chưa hoàn thành</span>
                                    break;
                                case 3:
                                    <span class="text-bold">Hoàn thành muộn</span>
                                    break;
                                case 4:
                                    <span class="text-bold">Đang xử lý</span>
                                    break;
                                case 0:
                                    <span class="text-bold">Chưa bắt đầu</span>
                                    break;
                                default:
                                    <span class="text-bold">Không xác định</span>
                                    break;
                            }
                        </td>
                        <td>@(latestScore?.Time?.ToString("dd/MM/yyyy HH:mm"))</td>
                        <td>@(jobMap.Job?.Deadline1?.ToString("dd/MM/yyyy"))</td>
                        <td>@(latestScore?.CompletionDate?.ToString("dd/MM/yyyy"))</td>
                        <td>@(latestScore?.SummaryOfReviews)</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center">Không có công việc nào được giao cho nhân viên này.</p>
    }
</div>

<div class="mt-3">
    <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Chỉnh sửa</a>
    <a class="btn btn-secondary" asp-action="Index">Quay lại danh sách</a>
</div>
