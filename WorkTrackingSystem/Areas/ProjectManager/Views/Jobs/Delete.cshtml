@model WorkTrackingSystem.Models.Job

@{
    ViewData["Title"] = "Xóa công việc";
    Layout = "~/Areas/ProjectManager/Views/Shared/_ProjectManager.cshtml";
}

<div class="">
    <h1 class="mb-4 text-danger"><i class="bi bi-trash"></i> Xóa công việc</h1>

    <p class="lead">Bạn có chắc chắn muốn xóa công việc này?</p>

    <div class="card p-3">
        <dl class="row">
            <dt class="col-sm-3"><i class="bi bi-card-heading"></i> Tên công việc:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

            <dt class="col-sm-3"><i class="bi bi-file-text"></i> Mô tả:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Hạn chót 1:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Deadline1)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Hạn chót 2:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Deadline2)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-event"></i> Hạn chót 3:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Deadline3)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-check"></i> Ngày hoàn thành:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CompletionDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-check-square"></i> Trạng thái:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Status)</dd>

            <dt class="col-sm-3"><i class="bi bi-bar-chart-line"></i> Đánh giá khối lượng:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.VolumeAssessment)</dd>

            <dt class="col-sm-3"><i class="bi bi-bar-chart-line"></i> Đánh giá tiến độ:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.ProgressAssessment)</dd>

            <dt class="col-sm-3"><i class="bi bi-bar-chart-line"></i> Đánh giá chất lượng:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.QualityAssessment)</dd>

            <dt class="col-sm-3"><i class="bi bi-journal-text"></i> Tóm tắt đánh giá:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.SummaryOfReviews)</dd>

            <dt class="col-sm-3"><i class="bi bi-clock"></i> Thời gian:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Time)</dd>

            <dt class="col-sm-3"><i class="bi bi-trash"></i> Đã xóa:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsDelete)</dd>

            <dt class="col-sm-3"><i class="bi bi-check-circle"></i> Hoạt động:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.IsActive)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-plus"></i> Ngày tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-calendar-check"></i> Ngày cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateDate)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-plus"></i> Người tạo:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.CreateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-person-check"></i> Người cập nhật:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.UpdateBy)</dd>

            <dt class="col-sm-3"><i class="bi bi-tag"></i> Danh mục:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Category.Id)</dd>

            <dt class="col-sm-3"><i class="bi bi-person"></i> Nhân viên:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Employee.Id)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="bi bi-trash"></i> Xóa công việc</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Quay lại danh sách</a>
        </form>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">